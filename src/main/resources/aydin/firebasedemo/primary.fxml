<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="aydin.firebasedemo.PrimaryController">
    <children>
        <VBox alignment="CENTER" prefHeight="373.0" prefWidth="530.0" spacing="15.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>
            <children>
                <Label text="CSC325 - SW Engineering Demo: Check console for Firebase logs" />

                <TextField fx:id="nameTextField" promptText="Enter name" />
                <TextField fx:id="ageTextField" promptText="Enter age" />
                <TextField fx:id="phoneTextField" promptText="Enter phone number" />

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="readButton" text="Read" onAction="#readButtonClicked" prefWidth="80.0" />
                        <Button fx:id="writeButton" text="Write" onAction="#writeButtonClicked" prefWidth="80.0" />
                        <Button fx:id="registerButton" text="Register" onAction="#registerButtonClicked" prefWidth="90.0" />
                        <Button fx:id="switchSecondaryViewButton" text="Switch to Secondary View"
                                onAction="#switchToSecondary" prefWidth="180.0" />
                    </children>
                </HBox>

                <TextArea fx:id="outputTextArea" prefHeight="220.0" prefWidth="480.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>
