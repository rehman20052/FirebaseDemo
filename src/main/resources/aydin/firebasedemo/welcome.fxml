<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="aydin.firebasedemo.WelcomeController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20;">

    <Label text="Welcome to Firebase Demo"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="emailField"
               promptText="Enter your email"
               maxWidth="250"/>

    <PasswordField fx:id="passwordField"
                   promptText="Enter your password"
                   maxWidth="250"/>

    <HBox alignment="CENTER" spacing="20">
        <Button text="Register"
                onAction="#onRegisterClicked"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 6 16; -fx-font-weight: bold;"/>
        <Button text="Sign In"
                onAction="#onSignInClicked"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 6 16; -fx-font-weight: bold;"/>
    </HBox>

</VBox>
